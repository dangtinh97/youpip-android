<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="false"
    android:background="@color/gray"
    tools:context=".views.fragment.social.CommentFragment">

    <RelativeLayout
        android:layout_alignParentTop="true"
        android:paddingVertical="@dimen/_12sdp"
        android:background="@color/primary"
        android:orientation="horizontal"
        android:id="@+id/toolBar"
        android:paddingHorizontal="@dimen/_12sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/close"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_close_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="CHAT" />
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/_8sdp"
        android:paddingHorizontal="@dimen/_12sdp"
        android:id="@+id/recycler_view"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_below="@+id/toolBar"
        android:layout_above="@+id/layout_action_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/layout_action_comment"
        android:layout_marginBottom="@dimen/_4sdp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:textColor="@color/white"
            android:maxLines="3"
            android:layout_weight="1"
            android:id="@+id/ip_comment"
            android:paddingHorizontal="@dimen/_10sdp"
            android:textColorHint="@color/gray_10"
            android:hint="Viết bình luận..."
            android:paddingVertical="@dimen/_6sdp"
            android:background="@drawable/radius_input_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/submit"
            android:paddingVertical="@dimen/_6sdp"
            android:layout_gravity="center_vertical"
            android:paddingHorizontal="@dimen/_6sdp"
            android:src="@drawable/ic_baseline_send_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
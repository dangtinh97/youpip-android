<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerMain"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/navigationTabBottom"
        android:layout_width="match_parent" />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:animateLayoutChanges="true"
        android:background="@color/black"
        android:paddingTop="10dp"
        android:layout_gravity="bottom"
        android:id="@+id/navigationTabBottom"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@drawable/bottom_navigation_item_color"
        app:itemTextColor="@drawable/bottom_navigation_item_color"
        app:menu="@menu/bottom_navigation_menu"
        />
    <LinearLayout
        android:id="@+id/progress_bar"
        android:visibility="gone"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:indeterminate="true"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/primary"
            android:background="@drawable/radius_10_black"
            android:padding="@dimen/_12sdp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleLarge"
            android:id="@+id/progressBar"
            tools:ignore="MissingConstraints" />
    </LinearLayout>
    <RelativeLayout
        app:layout_constraintBottom_toTopOf="@id/navigationTabBottom"
        android:background="@color/black"
        android:id="@+id/frame_video"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="10dp">
        <RelativeLayout
            android:elevation="3dp"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/progress_bar_video_vertical"
            android:background="@color/black_opacity"
            android:layout_alignBottom="@id/layout_play_view">
            <ProgressBar
                android:indeterminate="true"
                android:indeterminateTintMode="src_atop"
                android:indeterminateTint="@color/primary"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <ImageView
            android:contentDescription="@string/default_label"
            android:background="@color/gray"
            android:id="@+id/thumbnail_video"
            android:src="@drawable/logo_512_png"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_alignParentStart="true"
            android:id="@+id/layout_play_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.google.android.exoplayer2.ui.PlayerView
                android:layout_alignParentStart="true"
                android:visibility="gone"
                android:background="@color/black"
                android:id="@+id/video_play_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:use_controller="true"
                app:auto_show="true"
                app:controller_layout_id="@layout/custom_control_view"
                />
        </RelativeLayout>

        <RelativeLayout
            android:padding="@dimen/_10sdp"
            android:layout_below="@id/layout_play_view"
            android:id="@+id/view_vertical_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/title_video_vertical"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="16sp"
                android:textColor="@color/primary"
                android:text="@string/default_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/_4sdp"
                android:id="@+id/t_chanel_vertical"
                android:textColor="@color/gray_20"
                android:layout_below="@+id/title_video_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:id="@+id/r_action_video"
                android:layout_marginVertical="@dimen/_8sdp"
                android:gravity="end"
                android:layout_below="@+id/t_chanel_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:contentDescription="@string/default_label"
                    android:id="@+id/only_audio"
                    android:src="@drawable/ic_baseline_headset_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:contentDescription="@string/default_label"
                    android:paddingHorizontal="@dimen/_4sdp"
                    android:id="@+id/add_list"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/only_audio"
                    android:src="@drawable/ic_baseline_playlist_add_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/share"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/add_list"
                    android:src="@drawable/ic_baseline_share_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/default_label" />
                <ImageView
                    android:contentDescription="@string/default_label"
                    android:paddingHorizontal="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/share"
                    android:src="@drawable/ic_baseline_access_time_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@+id/r_action_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="@dimen/_14sdp"
                    android:id="@+id/sameVideo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/action_small_video"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <TextView
                android:visibility="gone"
                android:id="@+id/title_video_small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:contentDescription="@string/default_label"
                android:padding="8dp"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="8dp"
                android:layout_centerVertical="true"
                android:id="@+id/hide_video"
                android:src="@drawable/ic_speak"
                android:layout_width="52dp"
                android:layout_height="52dp"/>
            <ImageView
                android:contentDescription="@string/default_label"
                android:layout_alignParentEnd="true"
                android:padding="8dp"
                android:layout_centerVertical="true"
                android:id="@+id/closeVideoSmall"
                android:src="@drawable/ic_baseline_close_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="@dimen/_12sdp"
    android:background="@color/gray"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/_12sdp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/info_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingHorizontal="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:id="@+id/content"
            android:textColor="@color/white"
            android:text="Tôi nhận ra nhiều điều sau khi đọc xong một cuốn sách. Sách không chỉ là sách mà sách là những bài học về cuộc sống❤️"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_below="@+id/content"
            android:id="@+id/image"
            android:src="@drawable/i2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:background="@color/gray"
        android:layout_below="@+id/info_post"
        android:id="@+id/action_post"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:fontFamily="@font/montserrat_medium"
            app:iconGravity="textStart"
            android:gravity="center"
            android:layout_gravity="center"
            app:icon="@drawable/ic_like"
            android:layout_weight="1"
            android:id="@+id/like"
            android:textAllCaps="false"
            android:text="Thích"
            app:iconTint="@color/primary"
            android:backgroundTint="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.google.android.material.button.MaterialButton
            android:fontFamily="@font/montserrat_medium"
            app:iconGravity="textStart"
            android:gravity="center"
            android:layout_gravity="center"
            app:icon="@drawable/ic_outline_comment_24"
            android:layout_weight="1"
            android:id="@+id/comment"
            android:textAllCaps="false"
            android:text="Bình luận"
            android:backgroundTint="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
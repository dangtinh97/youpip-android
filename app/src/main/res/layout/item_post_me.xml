<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="@dimen/_12sdp"
    android:background="@color/gray"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/_12sdp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/info_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingHorizontal="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:id="@+id/content"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_toStartOf="@+id/action"
                android:layout_height="wrap_content"/>
            <ImageView
                android:contentDescription="@string/default_label"
                android:id="@+id/action"
                android:layout_marginBottom="@dimen/_4sdp"
                android:padding="@dimen/_4sdp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_baseline_delete_outline_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <ImageView
            android:contentDescription="@string/default_label"
            android:elevation="1dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_below="@+id/layout_content"
            android:id="@+id/image"
            android:src="@drawable/logo_512_png"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:background="@color/gray"
        android:layout_below="@+id/info_post"
        android:id="@+id/action_post"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:fontFamily="@font/montserrat_medium"
            app:iconGravity="textStart"
            android:gravity="center"
            android:layout_gravity="center"
            app:icon="@drawable/ic_like"
            android:layout_weight="1"
            android:id="@+id/like"
            android:textAllCaps="false"
            android:text="Thích"
            app:iconTint="@color/primary"
            android:backgroundTint="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.google.android.material.button.MaterialButton
            android:fontFamily="@font/montserrat_medium"
            app:iconGravity="textStart"
            android:gravity="center"
            android:layout_gravity="center"
            app:icon="@drawable/ic_outline_comment_24"
            android:layout_weight="1"
            android:id="@+id/comment"
            android:textAllCaps="false"
            android:text="Bình luận"
            android:backgroundTint="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
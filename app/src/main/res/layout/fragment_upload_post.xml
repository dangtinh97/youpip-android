<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:id="@+id/layout"
    tools:context=".views.fragment.social.UploadPostFragment">
    <RelativeLayout
        android:background="@color/primary"
        android:orientation="horizontal"
        android:id="@+id/toolBar"
        android:paddingHorizontal="@dimen/_12sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:padding="12dp"
            android:id="@+id/close_upload_post"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_close_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/default_label" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/l_content"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_below="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar"
            android:src="@drawable/avatar"
            android:layout_width="54dp"
            android:layout_height="54dp"/>
        <EditText
            android:id="@+id/post_content"
            android:maxLines="6"
            android:paddingVertical="@dimen/_6sdp"
            android:paddingHorizontal="@dimen/_16sdp"
            android:textSize="16sp"
            android:background="@drawable/radius_30_black"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textColorHint="@color/gray_10"
            android:hint="Ngày hôm nay của em thế nào?"
            android:layout_toRightOf="@+id/avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/l_action"
        android:paddingHorizontal="@dimen/_12sdp"
        android:gravity="end"
        android:layout_below="@+id/l_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:layout_marginEnd="4dp"
            android:layout_toStartOf="@+id/submit"
            android:id="@+id/choice_image"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:gravity="center"
            app:iconTint="#02af66"
            app:icon="@drawable/ic_baseline_photo_library_24"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:iconGravity="textStart"
            android:backgroundTintMode="@color/primary"
            android:padding="0dp"
            app:iconPadding="0dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:iconSize="24dp"

            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/submit"
            app:cornerRadius="@dimen/_12sdp"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:backgroundTint="#2196F3"
            android:text="Đăng bài"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/l_show_image"
        android:layout_margin="@dimen/_12sdp"
        android:layout_below="@+id/l_action"
        android:gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:visibility="gone"
            android:id="@+id/btn_clear_image"
            android:layout_alignParentEnd="true"
            android:elevation="1dp"
            android:layout_marginEnd="4dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:gravity="center"
            app:icon="@drawable/ic_baseline_close_24"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:iconGravity="textStart"
            android:backgroundTintMode="@color/primary"
            android:padding="0dp"
            app:iconPadding="0dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:iconSize="24dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
            />
        <ImageView
            android:contentDescription="@string/default_label"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:id="@+id/image_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/l_show_image"
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>